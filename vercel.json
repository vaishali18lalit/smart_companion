{
  "builds": [
    {
      "src": "backend/server-openrouter.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server-openrouter.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "NEWS_API_KEY": "@news_api_key"
  }
}